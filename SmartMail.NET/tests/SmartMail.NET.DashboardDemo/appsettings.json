{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "YourSecretKeyHere123!@#$%^&*()",
    "Issuer": "SmartMail.NET.DashboardDemo",
    "Audience": "SmartMail.NET.DashboardDemo",
    "ExpiryInMinutes": 60
  },
  "SmartMail": {
    "Providers": {
      "Gmail": {
        "Type": "Smtp",
        "Host": "smtp.gmail.com",
        "Port": 587,
        "Username": "your-email@gmail.com",
        "Password": "your-app-password",
        "EnableSsl": true,
        "Quota": 500
      },
      "Office365": {
        "Type": "Smtp",
        "Host": "smtp.office365.com",
        "Port": 587,
        "Username": "your-email@outlook.com",
        "Password": "your-password",
        "EnableSsl": true,
        "Quota": 1000
      },
      "AwsSes": {
        "Type": "AwsSes",
        "Region": "us-west-2",
        "AccessKey": "your-access-key",
        "SecretKey": "your-secret-key",
        "Quota": 2000
      }
    }
  },
  "AWS": {
    "Region": "us-east-1",
    "AccessKey": "YOUR_AWS_ACCESS_KEY_HERE",
    "SecretKey": "YOUR_AWS_SECRET_KEY_HERE",
    "DefaultFrom": "your-verified-email@example.com"
  },
  "Dashboard": {
    "Username": "admin",
    "Password": "admin"
  }
} 